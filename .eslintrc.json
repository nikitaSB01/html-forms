{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12, // Поддержка ES2021
    "sourceType": "module" // Поддержка модулей
  },
  "rules": {
    "no-console": "warn", // Предупреждение о console.log
    "quotes": ["error", "double"]
  }
}

  
